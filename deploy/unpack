source .bashrc
echo "source $HOME/dotfiles/.zshrc" >> .zshrc
sudo chsh -s /bin/zsh $(whoami)
echo "Done installing dotfiles."

echo "setting passwordless sudo"
sudo bash -c "echo \"$(whoami) ALL=(ALL:ALL) NOPASSWD: ALL\" > /etc/sudoers.d/$(whoami)"

