#!/bin/bash

set -euxo pipefail

echo "Satchel is a repository filled with standard unix config and scripts for Countable Web Productions."
cd $HOME
touch .bashrc
touch .zshrc
echo "source $HOME/dotfiles/.bashrc" >> .bashrc
echo "source $HOME/dotfiles/.zshrc" >> .zshrc
ln -s dotfiles/.vimrc
