#!/bin/bash

docker_compose_id=$(pwd | grep -oh "[^/]*$" | sed "s/[^a-z\d]//g")

set -euxo pipefail

filename=${1:-dump}

docker cp $filename ${docker_compose_id}_db_1:/tmp/
docker-compose stop
docker-compose up -d db
docker-compose exec db mongo db --eval "db.dropDatabase()"
docker-compose exec db bash -c "cd /tmp && mongorestore" 

