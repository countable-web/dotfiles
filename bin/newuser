#!/bin/bash

sudo adduser --disabled-password --gecos "" $1
sudo usermod -aG docker $1
sudo usermod -aG dev $1

# create SSH folder.
sudo mkdir -p $HOME/.ssh/
sudo touch $HOME/.ssh/authorized_keys
sudo chown -R $1 $HOME/.ssh/
sudo chmod 600 $HOME/.ssh/

